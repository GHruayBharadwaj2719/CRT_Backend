package entity;

import jakarta.persistence.*;
import java.util.List;
@Entity
@Table(name = "users")
public class User {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private Long id;

    @Column(nullable = false, unique = true)
    private String email;

    @Column(nullable = false)
    private String password;

    // getters & setters


    // One user can have multiple progress records
    @OneToMany(mappedBy = "user", cascade = CascadeType.ALL, fetch = FetchType.LAZY)
    private List<Progress> progressList;

    // Explicit getter for password
    public String getPassword() {
        return this.password;
    }

    // Explicit setter for password
    public void setPassword(String password) {
        this.password = password;
    }

    // Explicit getter for email
    public String getEmail() {
        return this.email;
    }

    // Explicit setter for email
    public void setEmail(String email) {
        this.email = email;
    }

    // Explicit getter for progressList
    public List<Progress> getProgressList() {
        return this.progressList;
    }

    // Explicit setter for progressList
    public void setProgressList(List<Progress> progressList) {
        this.progressList = progressList;
    }

}
